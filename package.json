{
  "name": "@bechara/eslint-config-bechara-ts",
  "version": "0.1.0",
  "description": "Custom ESLint configuration for Node.js projects written in TypeScript",
  "author": {
    "name": "Etienne Bechara",
    "email": "bechara.etienne@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/etienne-bechara/eslint-config-bechara-ts"
  },
  "license": "MIT",
  "scripts": {
    "update:patch": "ncu -u --semverLevel minor && npm i && npm audit fix",
    "update:minor": "ncu -u --semverLevel major && npm i && npm audit fix",
    "update:major": "ncu -u && npm i && npm audit fix --force"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "4.6.0",
    "@typescript-eslint/parser": "4.6.0",
    "eslint": "7.12.1",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.0",
    "eslint-plugin-jsdoc": "30.7.3",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-simple-import-sort": "5.0.3",
    "eslint-plugin-unicorn": "23.0.0",
    "eslint-plugin-unused-imports": "1.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "husky": "4.3.0",
    "npm-check-updates": "9.2.3",
    "semantic-release": "17.2.2"
  }
}
